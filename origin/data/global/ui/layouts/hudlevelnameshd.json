        },
        {
            "type": "TextBoxWidget", "name": "DesecratedText",
            "fields": {
                "rect": { "y": 100 },
                "style": {
                    "pointSize": 54,
                    "fontColor": { "r": 128, "g": 0, "b": 128 },
