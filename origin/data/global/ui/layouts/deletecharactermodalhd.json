{
    "basedOn": "ConfirmationModalHD.json",
    "type": "DeleteCharacterModal", "name": "DeleteCharacterModal",
    "children": [
        {
            "type": "ImageWidget", "name": "Frame",
            "children": [
                {
                    "type": "TextBoxWidget", "name": "Prompt",
                    "fields": {
                        "text": "@strdeletecharmessage"
                    }
                },
                {
                    "type": "ButtonWidget", "name": "Confirm",
                    "fields": {
                        "textString": "@strdeletecharok"
                    }
                },
                {
                    "type": "ButtonWidget", "name": "Dismiss",
                    "fields": {
                        "textString": "@strdeletecharnot"
                    }
                },
            ]
        },
    ]
}