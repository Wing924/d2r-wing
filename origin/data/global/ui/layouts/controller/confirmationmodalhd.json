            "type": "ImageWidget", "name": "Frame",
            "children": [
                {
                    "type": "TextBoxWidget", "name": "Prompt",
                },
                {
                    "type": "ButtonWidget", "name": "Confirm",
                    "children": [
                        {
                            "type": "ButtonLegendWidget", "name": "ConfirmLegend",
                            "fields": {
                                "anchor": { "x": 0.5, "y": 1.0 },
