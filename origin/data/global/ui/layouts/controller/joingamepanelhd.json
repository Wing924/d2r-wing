        {
            "type": "TextBoxWidget", "name": "Difficulty",
            "children": [
                {
                    "type": "DropdownListWidget", "name": "DifficultyDropdown",
                    "fields": {
                        "navigation": {
                            "up": { "name": "PasswordInput" },
