                "rect": { "x": 332, "y": 1070 },
                "filename": "FrontEnd\\HD\\Final\\FrontEnd_ButtonMed",
            },
            "children": [
                {
                    "type": "TextBoxWidget", "name": "JoinButtonText",
                    "fields": {
                        "anchor": { "x": 0.5, "y": 0.5 },
