{
    "type": "ContextMenu", "name": "ContextMenu",
    "fields": {
        "rect": { "x": 0, "y": 0, "width": 760, "height": 540 },
        "defaultWidget": "OptionsList",
        "drawTint": false,
        "priority": 2000000001,
    },
    "children": [
        {
            "type": "ImageWidget", "name": "TitleImage",
            "fields": {
                "rect": { "x": 0, "y": 0, "width": 760, "height": 54 },
                "filename": "Lobby\\ContextMenuSlotsWide",
            },
            "children": [
                {
                    "type": "TextBoxWidget", "name": "Title",
                    "fields": {
                        "fitToParent": true,
                        "style": {
                            "pointSize": "$MediumFontSize",
                            "alignment": { "h": "center", "v": "center" },
                        },
                        "useAltStyleIfDoesntFit": true,
                        "altStyle": {
                            "fontFace": "BlizzardGlobal",
                            "pointSize": "$SmallFontSize",
                            "spacing": "$ReducedSpacing",
                            "alignment": { "h": "center", "v": "center" },
                        }
                    }
                }
            ]
        },
        {
            "type": "RecyclingListWidget", "name": "OptionsList",
            "fields": { 
                "rect": { "x": 0, "y": 54, "width": 760, "height": 540 },
                "itemSelectionMessage": "ContextMenuMessage:SelectMenuItem",
                "selectorName": "ContextListSelector",
                "isHoverList": true,
            },
            "children": [
                {
                    "type": "HoverListItemWidget", "name": "template",
                    "fields": {
                        "rect": { "x": 0, "y": 0, "width": 760, "height": 54 },
                        "baseColor": "$FontColorGold",
                        "hoveredColor": "$FontColorWhite",
                    },
                    "children": [
                        {
                            "type": "ImageWidget", "name": "Image",
                            "fields": {
                                "filename": "Lobby\\ContextMenuSlotsWide",
                            },
                        },
                        {
                            "type": "TextBoxWidget", "name": "TextBox",
                            "fields": {
                                "fitToParent": true,
                                "style": {
                                    "pointSize": "$MediumFontSize",
                                    "alignment": { "h": "center", "v": "center" },
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "Widget", "name": "ContextListSelector",
                }
            ]
        },
         // TODO: Place holder:: REMOVE/use updated art
        {
            "type": "ScrollControllerWidget", "name": "ScrollBar",
            "fields": { 
                "rect": { "x": 0, "y": 0, "width": 0, "height": 0 },
                "upArrowFilepath": "FrontEnd\\ScrollUp", // 0/2
                "downArrowFilepath": "FrontEnd\\ScrollDown", // 1/3
                "barFilepath": "FrontEnd\\ScrollBar", // 4
                "viewName": "OptionsList"
            }
        },
    ]
}
